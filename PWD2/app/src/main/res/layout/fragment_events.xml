<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcd94"
    tools:context="com.example.hp.pwd2.Events">

    <!-- TODO: Update blank fragment layout -->

    <android.support.v4.view.ViewPager
        android:layout_height="190dp"
        android:layout_width="match_parent"
        android:id="@+id/viewPager"
         android:layout_marginBottom="1dp">

    </android.support.v4.view.ViewPager>


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:text="What's new"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#ff0000"
        android:layout_below="@+id/viewPager"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Youth4Jobs , Stephen Hawkins the brightest star , Jalandar: Depty Commissioner exhorts PWD's to avail benefit of NCSC , OPen disability studies department , Election Commission's"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:padding="10dp"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:background="#ff0000"
        android:layout_alignBottom="@+id/button"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text="Skill
 Training"
        android:background="#FFFF66"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:background="#00FA9A"
        android:layout_height="80dp"
        android:text="Employment
Opportunities"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Know about PWD's"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:background="#ffad60"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/button9"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Types of Disability"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorAccent"
        android:background="#82caff"
        android:layout_below="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:layout_marginTop="21dp" />


    <Button
        android:id="@+id/button5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="NGO's Support and Policy"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="#D2691E"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/button9"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        android:background="@drawable/oval_shape_button"
        android:backgroundTint="#ff0000"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FAQ's"
        android:textColor="@color/white"
        android:background="@drawable/oval_shape_button"
        android:backgroundTint="#ff0000"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help"
        android:textColor="@color/white"
        android:background="@drawable/oval_shape_button"
        android:backgroundTint="#ff0000"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp" />


</RelativeLayout>
